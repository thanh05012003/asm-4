
@model IEnumerable<User>

@{
    ViewData["Title"] = "ShowListAccount";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    List<Role> role = ViewBag.Role;
}
<h1>ShowListAccount</h1>

<p>
    <a asp-action="AddAccount">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
         
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdRole)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
               @* @Html.DisplayFor(modelItem => item.IdRole)*@
                @role.FirstOrDefault(c =>c.Id == item.IdRole).Name
            </td>
            <td>
                @(item.Status ==1?"Hoạt động":"Không hoạt động")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditAccount", new {  id=item.Id }) |
                @Html.ActionLink("Delete", "DeleteAccount", new {  id=item.Id  })
            </td>
        </tr>
}
    </tbody>
</table>
